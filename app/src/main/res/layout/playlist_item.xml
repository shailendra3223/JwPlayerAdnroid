<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_player_container"
            android:layout_width="160dp"
            android:layout_height="90dp"
            app:cardCornerRadius="8dp"
            android:background="@android:color/black">

            <ImageView
                android:id="@+id/iv_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_launcher_background" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv_player_container"
            android:layout_alignStart="@+id/cv_player_container"
            android:layout_alignEnd="@+id/cv_player_container"
            android:layout_marginStart="0dp"
            android:paddingRight="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/tv_title"
            android:layout_alignStart="@+id/cv_player_container"
            android:layout_alignEnd="@+id/cv_player_container"
            android:layout_marginTop="2dp"
            android:background="@color/white25" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_alignStart="@+id/tv_title"
            android:layout_alignEnd="@+id/tv_title"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="0dp"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold" />

    </RelativeLayout>
</layout>